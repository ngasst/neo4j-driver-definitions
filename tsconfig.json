{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": "./src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "lib": [
            "es2015"
        ]
    },
    "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
